@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h2>Manage Roles</h2>

<p>
    <a asp-action="Create" asp-controller="Role" class="btn btn-success">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger delete-role">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
