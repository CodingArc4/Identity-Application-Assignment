@model List<Identity_Application_Assignment.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h2>Manage Roles</h2>

<p>
    <a asp-action="Create" asp-controller="Role" class="btn btn-success">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Assigned Role Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roleViewModel in Model)
        {
            <tr>
                <td>@roleViewModel.RoleName</td>
                <td>@roleViewModel.AssignedRoleCount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@roleViewModel.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@roleViewModel.Id" class="btn btn-danger delete-role">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
