@model List<Identity_Application_Assignment.ViewModels.UsersViewModel>

<h2>User Management</h2>

<p>
    <a asp-action="Register" asp-controller="Account" class="btn btn-success">Register New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger delete-role">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
